<% if ga_enabled? %>
  <script>
    if (typeof gtag !== 'undefined') {
      <% if user_id = try_spree_current_user.try(:id) %>
        gtag('config', '<%= ga_tracker.analytics_id %>', {
          'user_id': '<%= user_id %>'
        });
      <% else %>
        gtag('config', '<%= ga_tracker.analytics_id %>');
      <% end %>

      <% if ga_tracker.second_analytics_id.present? %>
        gtag('config', '<%= ga_tracker.second_analytics_id %>');
      <% end %>
    }
  </script>
<% end %>
