<% if segment_enabled? && @order.present? && !@order.complete? %>
  <script>
      if (typeof analytics !== 'undefined') {
        var segmentCartJson = {
          cartNumber: '<%= @order.number %>'
        }
        analytics.identify({
          lastCartViewed: '<%= @order.number %>'
        });
        analytics.track('Cart Viewed', segmentCartJson);
      }
  </script>
<% end %>
