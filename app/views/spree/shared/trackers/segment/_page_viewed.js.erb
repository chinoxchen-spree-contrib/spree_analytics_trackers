<% if segment_enabled? %>
  <script>
    window.onload = function(){
      if (typeof analytics !== 'undefined') {
        if (!!getCookie('user_id') && !!getCookie('user_email')) {
          analytics.identify(getCookie('user_id'), {
          email: getCookie('user_email')
          })
        }
        else {
          analytics.identify({});
        }
      }
      analytics.page();
      if (!!getUserCookie('user_id') && !!getUserCookie('user_email')) {
        analytics.identify(getUserCookie('user_id'), { email: getUserCookie('user_email') });
      }
      window.addEventListener('turbolinks:load', function() {
        window.readyToSegment = true;
      });
    }
  </script>
<% end %>
