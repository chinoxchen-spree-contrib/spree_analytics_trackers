<% if segment_enabled? %>
  <script>
    window.onload = function(){
      if (typeof analytics !== 'undefined') {
      <% if user = try_spree_current_user %>
        analytics.identify(getCookie('user_id'), {
         email: getCookie('user_email')
        });
      <% else %>
        analytics.identify({});
      <% end %>
        analytics.page();
    }
  };
  </script>
<% end %>

