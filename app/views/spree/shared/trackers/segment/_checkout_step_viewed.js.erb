<% if segment_enabled? && @order.present? && !@order.completed? %>
  <script>
      if (typeof analytics !== 'undefined') {
        analytics.track('CheckoutStepViewed', {
          checkout_id: '<%= @order.number %>',
          step: '<%= (@order.checkout_steps.index(@order.state) + 1) %>'
        });
      }
  </script>
<% end %>  
